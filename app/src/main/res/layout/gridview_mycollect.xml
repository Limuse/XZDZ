<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/gv_imgs"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/xz" />

        <RelativeLayout
            android:id="@+id/dels"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/gv_imgs"
            android:background="@drawable/btn_press">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/btn_press"
                android:padding="1dp"
                android:src="@mipmap/del" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/gv_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="单排一粒扣西装"
        android:textColor="@color/app_text_dark"
        android:textSize="@dimen/app_text_big" />

    <TextView
        android:id="@+id/gv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="￥3456"
        android:textColor="@color/app_text_dark"
        android:textSize="@dimen/app_text_big" />


</LinearLayout>
