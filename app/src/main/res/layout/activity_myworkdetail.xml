<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView_myworkdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.custom.ImageCycleViewRight
                android:id="@+id/ImageCycleViewdetail"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_dark"
                android:layout_margin="16dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/app_text_normal"/>

            <com.custom.IlistView
                android:id="@+id/listvewdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cacheColorHint="#00000000"
                android:clickable="true"
                android:divider="@null"
                android:fadingEdge="none"
                android:focusable="true"
                android:layoutAnimation="@anim/navagation_listview_anim4"
                android:listSelector="#00000000"
                android:scrollbars="none" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
